<Window x:Class="AsyncButtons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncButtons"
        mc:Ignorable="d"
        Title="MainWindow" Height="240" Width="240">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click" Margin="20,20,0,0" Height="40"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="40"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top" Click="Button_Click_2" Height="40"/>
        <Label Name = "lbl1" Content="Label" HorizontalAlignment="Left" Margin="120,140,0,0" VerticalAlignment="Top" Height="40"/>
        <Label Name = "lbl2" Content="Label" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top" Height="40"/>
        <Label Name = "lbl3" Content="Label" HorizontalAlignment="Left" Margin="120,20,0,0" VerticalAlignment="Top" Height="40"/>

    </Grid>
</Window>
